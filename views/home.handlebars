  </form>
</div>

{{#if error}}<div class="alert">{{error}}</div>{{/if}}

{{#if users.length}}
  <div class="users-grid">
    {{#each users}}
      <div class="user-card">
        <h3>{{this.name}}</h3>
        <p>{{this.occupation}}</p>
        <p>{{#if this.newsletter}}游닎 Recebe newsletter{{else}}游닔 N칚o recebe{{/if}}</p>
        <div class="actions">
          <a href="/users/{{this.id}}">Ver</a> | <a href="/users/edit/{{this.id}}">Editar</a>
        </div>
      </div>
    {{/each}}
  </div>

  <div class="pagination">
    {{#if (gt currentPage 1)}}
      <a href="/?page={{subtract currentPage 1}}&q={{q}}">Anterior</a>
    {{/if}}
    <span>P치gina {{currentPage}} de {{totalPages}}</span>
    {{#if (lt currentPage totalPages)}}
      <a href="/?page={{add currentPage 1}}&q={{q}}">Pr칩xima</a>
    {{/if}}
  </div>
{{else}}
